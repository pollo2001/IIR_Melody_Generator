{
    "configurations": [
        {
            "name": "Mac",
            "defines": [],
            "macFrameworkPath": [
                "/Library/Developer/CommandLineTools/SDKs/MacOSX.sdk/System/Library/Frameworks"
            ],
            "cStandard": "c17",
            "cppStandard": "c++17",
            "intelliSenseMode": "macos-clang-arm64",
            "includePath": [
                "${workspaceFolder}/**",            // Include current workspace folders
                "/opt/homebrew/include"             // Path to sndfile.h
            ],
            "libraryPath": [
                "/opt/homebrew/lib"                 // Path to libsndfile.dylib
            ],
            "compilerPath": "/usr/bin/clang",         // Default compiler on macOS
            "browse": {
                "path": [
                    "/opt/homebrew/include",
                    "/opt/homebrew/lib",
                    "${workspaceFolder}/**"
                ]
            }
        }
    ],
    "version": 4
}
