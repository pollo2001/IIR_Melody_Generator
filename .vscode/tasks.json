{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build and Run",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-I/opt/homebrew/include",         // Path to sndfile.h
                "-L/opt/homebrew/lib",            // Path to libsndfile.dylib
                "-lsndfile",                      // Link the libsndfile library
                "-o", "my_program",               // Output executable name
                "${file}"                         // Compile the currently open file
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Generated task for compiling the program"
        }
    ]
}
